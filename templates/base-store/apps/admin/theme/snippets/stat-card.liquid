{% comment %}
  Stat Card Snippet
  Usage: {% render 'stat-card', title: 'Total Revenue', value: '$1,234.56', icon: 'dollar', color: 'green' %}
{% endcomment %}

<div class="card" style="padding: 1.25rem;">
  <div style="display: flex; align-items: flex-start; justify-content: space-between;">
    <div>
      <p style="font-size: 0.875rem; color: #64748b;">{{ title }}</p>
      <p style="margin-top: 0.5rem; font-size: 1.5rem; font-weight: 600; color: #f1f5f9;">{{ value }}</p>
      {% if trend %}
        <p style="margin-top: 0.25rem; font-size: 0.75rem; color: {% if trend.is_positive %}#34d399{% else %}#f87171{% endif %};">
          {% if trend.is_positive %}+{% endif %}{{ trend.value }}% from last period
        </p>
      {% endif %}
    </div>
    <div style="padding: 0.625rem; border-radius: 0.5rem; {% if color == 'green' %}background: rgba(16, 185, 129, 0.1); color: #34d399;{% elsif color == 'amber' %}background: rgba(245, 158, 11, 0.1); color: #fbbf24;{% elsif color == 'red' %}background: rgba(239, 68, 68, 0.1); color: #f87171;{% else %}background: rgba(99, 102, 241, 0.1); color: #818cf8;{% endif %}">
      {% if icon == 'dollar' %}
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="12" y1="1" x2="12" y2="23"></line>
          <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
        </svg>
      {% elsif icon == 'package' %}
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
          <line x1="3" y1="6" x2="21" y2="6"></line>
          <path d="M16 10a4 4 0 0 1-8 0"></path>
        </svg>
      {% elsif icon == 'cart' %}
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="9" cy="21" r="1"></circle>
          <circle cx="20" cy="21" r="1"></circle>
          <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
        </svg>
      {% elsif icon == 'credit-card' %}
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <rect x="1" y="4" width="22" height="16" rx="2" ry="2"></rect>
          <line x1="1" y1="10" x2="23" y2="10"></line>
        </svg>
      {% else %}
        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="12" cy="12" r="10"></circle>
        </svg>
      {% endif %}
    </div>
  </div>
</div>
