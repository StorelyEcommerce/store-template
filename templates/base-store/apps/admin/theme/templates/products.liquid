{% assign page_title = 'Products' %}

{% capture actions %}
  <button onclick="openCreateModal()" class="btn btn-primary">
    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <line x1="12" y1="5" x2="12" y2="19"></line>
      <line x1="5" y1="12" x2="19" y2="12"></line>
    </svg>
    Add Product
  </button>
{% endcapture %}

{% render 'page-header', title: 'Products', description: 'Manage products for ' | append: selected_store.slug, actions: actions %}

<!-- Search -->
<div style="margin-bottom: 1.5rem;">
  <div style="position: relative; max-width: 28rem;">
    <svg style="position: absolute; left: 0.75rem; top: 50%; transform: translateY(-50%); width: 1rem; height: 1rem; color: #64748b;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
      <circle cx="11" cy="11" r="8"></circle>
      <path d="m21 21-4.35-4.35"></path>
    </svg>
    <input
      type="text"
      id="product-search"
      placeholder="Search products..."
      oninput="filterProducts(this.value)"
      class="input"
      style="padding-left: 2.5rem;"
    />
  </div>
</div>

<!-- Products Table -->
<div id="products-container">
  {% if products.size == 0 %}
    <div class="card" style="text-align: center; padding: 5rem 0;">
      <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="#475569" stroke-width="2" style="margin: 0 auto 1rem;">
        <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
        <line x1="3" y1="6" x2="21" y2="6"></line>
        <path d="M16 10a4 4 0 0 1-8 0"></path>
      </svg>
      <h2 style="font-size: 1.125rem; font-weight: 600; color: #f1f5f9;">
        No products yet
      </h2>
      <p style="margin-top: 0.25rem; color: #64748b;">
        Create your first product to get started
      </p>
      <button onclick="openCreateModal()" class="btn btn-primary" style="margin-top: 1rem;">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="12" y1="5" x2="12" y2="19"></line>
          <line x1="5" y1="12" x2="19" y2="12"></line>
        </svg>
        Add Product
      </button>
    </div>
  {% else %}
    <div class="table-container">
      <table class="table">
        <thead>
          <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Status</th>
            <th style="text-align: right;">Actions</th>
          </tr>
        </thead>
        <tbody id="products-table-body">
          {% for product in products %}
            <tr data-product-id="{{ product.id }}" data-product-title="{{ product.title | downcase }}" data-product-description="{{ product.description | downcase | default: '' }}">
              <td>
                <div style="display: flex; align-items: center; gap: 0.75rem;">
                  <div style="width: 2.5rem; height: 2.5rem; border-radius: 0.5rem; background: #1e293b; overflow: hidden; flex-shrink: 0;">
                    {% if product.imageUrl %}
                      <img src="{{ product.imageUrl }}" alt="" style="width: 100%; height: 100%; object-fit: cover;" />
                    {% else %}
                      <div style="width: 100%; height: 100%; display: flex; align-items: center; justify-content: center;">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="#475569" stroke-width="2">
                          <path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"></path>
                          <line x1="3" y1="6" x2="21" y2="6"></line>
                          <path d="M16 10a4 4 0 0 1-8 0"></path>
                        </svg>
                      </div>
                    {% endif %}
                  </div>
                  <div>
                    <p style="font-weight: 500; color: #f1f5f9;">{{ product.title }}</p>
                    {% if product.description %}
                      <p style="font-size: 0.75rem; color: #64748b; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; max-width: 200px;">
                        {{ product.description }}
                      </p>
                    {% endif %}
                  </div>
                </div>
              </td>
              <td style="font-family: 'JetBrains Mono', monospace; color: #f1f5f9;">
                {{ product.priceCents | divided_by: 100.0 | money: product.currency }}
              </td>
              <td>
                <span style="{% if product.stock == 0 %}color: #f87171;{% else %}color: #cbd5e1;{% endif %}">
                  {{ product.stock | default: 'âˆž' }}
                </span>
              </td>
              <td>
                <span class="badge {% if product.isActive %}badge-success{% else %}badge-error{% endif %}">
                  {% if product.isActive %}Active{% else %}Inactive{% endif %}
                </span>
              </td>
              <td>
                <div style="display: flex; align-items: center; justify-content: flex-end; gap: 0.5rem;">
                  <button
                    onclick="openEditModal('{{ product.id }}')"
                    style="padding: 0.375rem; color: #94a3b8; background: transparent; border: none; cursor: pointer; border-radius: 0.25rem; transition: all 0.15s;"
                    onmouseover="this.style.color='#f1f5f9'; this.style.background='#1e293b';"
                    onmouseout="this.style.color='#94a3b8'; this.style.background='transparent';"
                  >
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                      <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                    </svg>
                  </button>
                  <button
                    onclick="confirmDelete('{{ product.id }}', '{{ product.title }}')"
                    style="padding: 0.375rem; color: #94a3b8; background: transparent; border: none; cursor: pointer; border-radius: 0.25rem; transition: all 0.15s;"
                    onmouseover="this.style.color='#f87171'; this.style.background='rgba(239, 68, 68, 0.1)';"
                    onmouseout="this.style.color='#94a3b8'; this.style.background='transparent';"
                  >
                    <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="3 6 5 6 21 6"></polyline>
                      <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
                    </svg>
                  </button>
                </div>
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  {% endif %}
</div>

<!-- Product Modal (rendered via JavaScript) -->
<div id="product-modal" style="display: none;"></div>

<!-- Delete Confirmation Modal -->
<div id="delete-modal" style="display: none;"></div>

<script src="{{ 'admin.js' | asset_url }}"></script>
<script>
  function filterProducts(query) {
    const rows = document.querySelectorAll('#products-table-body tr');
    const lowerQuery = query.toLowerCase();
    
    rows.forEach(row => {
      const title = row.getAttribute('data-product-title') || '';
      const description = row.getAttribute('data-product-description') || '';
      const matches = !query || title.includes(lowerQuery) || description.includes(lowerQuery);
      row.style.display = matches ? '' : 'none';
    });
  }
  
  function openCreateModal() {
    window.AdminAPI.openProductModal(null);
  }
  
  function openEditModal(productId) {
    window.AdminAPI.openProductModal(productId);
  }
  
  function confirmDelete(productId, productTitle) {
    window.AdminAPI.confirmDeleteProduct(productId, productTitle);
  }
</script>
